[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto
[user]
    name = Jocelyn MEYRON
    email = Jocelyn.Meyron@grenoble-inp.org
    ; email = Jocelyn.Meyron@ensimag.grenoble-inp.fr
[alias]
    ci = commit
    co = checkout
    st = status
    br = branch
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %Cblue(%an)%Creset' --abbrev-commit --date=relative
    oops = reset --soft HEAD^1
    frm = !sh -c 'git rm `git ls-files --deleted`'
    g = grep -n --break --heading
    yolo = push -f origin master
    update-fork = !git fetch upstream && git checkout master && git merge upstream/master
[core]
    autocrlf = input
    safecflf = true
    editor = vim
[diff]
    renames = true
[push]
    default = current
[merge]
    tool = vimdiff
    conflictstyle = diff3
[credential]
    helper = cache
[filter "hawser"]
    clean = git hawser clean %f
    smudge = git hawser smudge %f
    required = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

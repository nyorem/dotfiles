{
    "cmake.automaticReconfigure": false,
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "cmake.generator": "Unix Makefiles",
    "cmake.configureSettings": {
        "ENABLE_STANDALONE": true,
        "ENABLE_CDS": false,
        "ENABLE_TEST": true,
        "ENABLE_RUN_TESTS_AFTER_BUILD": false,
        "ENABLE_SRR": true,
        "ENABLE_DM": true,
        "REST_API_VERSION": 2,
        "ENABLE_GTEST_DISCOVER": true,
        "ENABLE_EVCI": true,
        "ENABLE_OCPP16": true,
    },
    "cmake.parallelJobs": 7,
    "cmake.options.statusBarVisibility": "compact",
    "cmake.showConfigureWithDebuggerNotification": false,
    "cmake.showOptionsMovedNotification": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.excludeGitIgnore": true,
    "editor.cursorBlinking": "solid",
    "editor.wordWrap": "on",
    "files.eol": "\n",
    "git.allowForcePush": true,
    "git.confirmSync": false,
    "security.workspace.trust.untrustedFiles": "open",
    "vim.handleKeys": {
        "<C-a>": false, // select all
        "<C-b>": false, // toggle sidebar
        "<C-c>": false, // copy to clipboard
        "<C-d>": true, // see https://github.com/VSCodeVim/Vim/issues/2144 for a workaround for using multiple cursors and vim shortcuts
        "<C-f>": false, // find
        "<C-h>": false, // find and replace
        "<C-j>": false, // toggle bottom pane
        "<C-k>": false, // vscode action shortcut
        "<C-p>": false, // find file in project
        "<C-u>": true, // see https://github.com/VSCodeVim/Vim/issues/2144 for a workaround for using multiple cursors and vim shortcuts
        "<C-w>": false, // close current window
        "<C-x>": false, // cut
    },
    "vim.leader": " ",
    "vim.insertModeKeyBindings": [
        {
            "before": ["<C-d>"],
            "commands": ["editor.action.addSelectionToNextFindMatch"],
        },
        {
            "before": ["<C-u>"],
            "commands": ["cursorUndo"],
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["j"],
            "after": ["g", "j"],
        },
        {
            "before": ["k"],
            "after": ["g", "k"],
        },
        {
            "before": ["Y"],
            "after": ["y", "$"],
        },
        {
            "before": ["K"],
            "commands": ["editor.action.showHover"],
        },
    ],
    "vim.startInInsertMode": false,
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "none",
    "bitbake.pathToBitbakeFolder": "${workspaceFolder}/poky/bitbake",
    "bitbake.pathToBuildFolder": "${workspaceFolder}/../build",
    "bitbake.pathToEnvScript": "${workspaceFolder}/poky/oe-init-build-env",
    "scm.repositories.sortOrder": "name",
    "scm.repositories.visible": 0,
}
